    <main class="main pt-4">
        <div class="container">

            <div class="row">
                @foreach (var booklist in this.Model)
                {

                    <div class=" col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <a href="@Url.Action("Details",new { id =booklist.bId})">
                                <img href="@Url.Action("Details",new { id =booklist.bId})" style="height: 300px; width: 225px;" src="@booklist.bURL" alt="商品圖片" />
                            </a>
                            <div class="caption">
                                <h3>@booklist.bTitle</h3>
                                <p>@booklist.bOriginal</p>
                                <p>作者:@booklist.bAuthor</p>
                                <p class="red">價格:@booklist.bMoney</p>
                                <p>
                                    <a href="javascript:void(0);" onclick="AddToCart('@booklist.bId')" class="btn btn-primary" role="button">加入購物車</a>
                                    <a href="@Url.Action("Details",new { id =booklist.bId})" class="btn btn-default" role="button">詳細資訊</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <article class="card card-outline mb-4">
                <div class="card-body">
                    <header>
                        <h4 class="card-title">Basic Table</h4>
                    </header>

                    <table class="table">
                        <caption>Optional table caption.</caption>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Mark</td>
                                <td>Otto</td>
                                <td>mdo</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Jacob</td>
                                <td>Thornton</td>
