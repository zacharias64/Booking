@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<body>



    <main class="main pt-5">

        <div class="container pt-5">

            <div class="row">
                <div class="col-md-9">

                    <article class="card mb-4">
                        <header class="card-header">
                            <div class="card-meta">
                                <a href="#">@Model.bOriginal</a>
                            </div>
                            <a href="">
                                <h4 class="card-title">@Model.bTitle</h4>
                            </a>
                        </header>
                        <a href="post-image.html">
                            <img class="card-img w-50" src="@Model.bURL" alt="">
                        </a>
                        <div class="card-body" style="white-space: pre-line">
                            <p class="card-text">@Model.bIntroduce</p>
                        </div>
                        @*<h4 class="font" style="white-space: pre-line">
                            @Model.bIntroduce
                        </h4>*@
                    </article><!-- /.card -->



                </div>
                <div class="col-md-3 ms-auto">

                    <aside class="sidebar">
                        <div class="card mb-4 ch">
                            <div class="card-body">
                                <h4 class="card-title ch">作者</h4>
                                <p class="card-text">@Model.bAuthor</p>
                            </div>
                        </div><!-- /.card -->
                    </aside>
                    <aside class="sidebar">
                        <div class="card mb-4 ch">
                            <div class="card-body">
                                <h4 class="card-title ch">出版資訊</h4>
                                <p class="card-text">出版年份 : @Model.bISBN</p>
                                <p class="card-text">出版年份 : @Model.bYear</p>
                                <p class="card-text">出版社 : @Model.bPubHouse</p>

                            </div>
                        </div><!-- /.card -->
                    </aside>
                    <aside class="sidebar">
                        <div class="card mb-4 ch">
                            <div class="card-body">
                                <h4 class="card-title ch">詳細資訊</h4>
                                <p class="card-text">翻者 : @Model.bTrans</p>
                                <p class="card-text">語言 : @Model.bLaun</p>

                            </div>
                        </div><!-- /.card -->
                    </aside>

                    <aside class="sidebar sidebar-sticky">
